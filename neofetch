#!/bin/bash
# macOS neofetch by Aarik Pokras
kf='| / - \'
fload=false
while fload = false;do for i in $kf; do printf "$i"; done; done
printf "\n\033[0;32m               :7JY^        \033[1;34m   $(whoami)@$(hostname)\033[0;32m\n             7Y557             \033[1;34m---------------------------\033[0;32m\n        .   ~YJ?^           \033[1;34m   OS:\033[0;37m $(uname -mrs)\033[0;32m\n   .~7?JJJ?!!!!7?JJJ?7^.       \033[1;34mHost: \033[0;37m$(hostname)\033[0;32m\n  !Y55555555555555555PY~  \033[1;34m     Kernel: \033[0;37m$(uname -r)\n\033[0;33m ?GGGGGGGGGGGGGGGGGGGJ.\033[1;34m        Uptime: \033[0;37m$(uptime | cut -d " " -f1)\033[0;33m\n 55555555555555555555.      \033[1;34m   Shell: \033[0;37m$SHELL $BASH_VERSION $ZSH_VERSION\033[0;31m\n YYYYYYYYYYYYYYYYYYYY:         \033[1;34mFree Space: \033[0;37m$(du -sh)iB\033[0;31m\n !???????????????????7:  \033[1;34m      Battery: \033[0;37m$(ioreg -c AppleSmartBattery -r | awk '$1~/Capacity/{c[$1]=$3} END{OFMT="%.2f%"; max=c["\"MaxCapacity\""]; if (max>0) { print 100*c["\"CurrentCapacity\""]/max;} }')\033[0;35m\n .7?77777777777777777??7^   \033[1;34m   Resolution: \033[0;37m$(tput cols)x$(tput lines)\033[0;35m\n  .!7777777777777777777!.    \033[1;34m  Packages: \033[0;37m$(if [ $(hash brew; printf "$?") -eq 0 ];then brew list | grep -n "" | sed 's/:.*/\ /g' | tail -n 1;else printf "Invalid package manager";fi)$(if [ $(hash brew; printf "$?") -eq 0 ];then printf "(brew)";else printf "Invalid";fi)\n\033[0;34m    ~?????????????????~  \n     :!???7!~~~!7???!:   \n\033[0m\n"
fload=true
